{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "src/**",
      "tests",
      "biome.json",
      "package.json",
      "vite.config.ts",
      "vitest.config.ts",
      "stylelint.config.js",
      "!src/routeTree.gen.ts",
      "!src/main.css"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noTsIgnore": "off"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
